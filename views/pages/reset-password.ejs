<head>
    <meta charset="utf-8">
    <title>BIZTROX</title>


    <!-- mobile responsive meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%- include('links'); %>
</head>

<body>

    <%- include('header'); %>

        <!-- skill -->
        <section class="section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h5 class="section-title-sm">SAI RAM</h5>
                        <h2 class="section-title section-title-border-half">Forgot your password?</h2>
                    </div>
                    <div class="col-lg-7">
                        <div class="mb-40">
                            <p class="text-dark">
                                Please provide the email address that you used when you signed up for your SaiKoti account. We will send you an email
                                that will allow you to reset your password.
                            </p>

                            <p class="text-dark">
                                (Note: Kindly check Spam folder)
                            </p>

                            <% if (errorMessage) { %>

                                <div class="col-md-10">
                                    <p class="text" style="color: red;font-weight:bold;border:none;text-align:center;">
                                        <%= errorMessage %>
                                    </p>
                                </div>
                                <% } else if(sucessMessage){ %>
                            
                                    <p class="text" style="color: green;font-weight:bold;border:none;">
                                        <%= sucessMessage %>  <a href="/login"> click here to Sign In</a></p>
                                    </p>
                            
                                    <%}%>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <div class="signup-form">
                            <form action="/api/reset/password" class="row" method="post" enctype="application/x-www-form-urlencoded">
                                <div class="col-12">
                                    <h4>Rest password</h4>
                                </div>
                                <div class="col-12">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Email Address">
                                </div>
                                <div class="col-sm-4">
                                    <button class="btn btn-primary btn-sm">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /skill -->
        

        <%- include('footer'); %>
        <%- include('scripts'); %>

</body>

</html>